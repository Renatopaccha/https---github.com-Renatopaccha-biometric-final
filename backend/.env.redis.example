# ==============================================================================
# REDIS CONFIGURATION FOR ETAPA 2
# ==============================================================================
# Copy this file to .env and configure for Redis backend

# ===== Storage Backend Selection =====
REDIS_ENABLED=true
STORAGE_BACKEND=redis
STORAGE_FALLBACK_TO_MEMORY=true

# ===== Redis Connection =====
REDIS_URL=redis://localhost:6379/0
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5.0
REDIS_SOCKET_CONNECT_TIMEOUT=5.0
REDIS_RETRY_ON_TIMEOUT=true
REDIS_HEALTH_CHECK_INTERVAL=30

# ===== Redis TTL =====
REDIS_SESSION_TTL_SECONDS=3600
REDIS_LOCK_TTL_SECONDS=10
REDIS_LOCK_RETRY_ATTEMPTS=3
REDIS_LOCK_RETRY_DELAY_MS=100

# ===== Serialization =====
SERIALIZATION_METHOD=pyarrow
COMPRESSION_ENABLED=true
COMPRESSION_CODEC=snappy
MAX_DATAFRAME_SIZE_MB=500

# ===== Other Settings (keep existing) =====
APP_NAME=Biometric API
DEBUG=true
SESSION_TIMEOUT_MINUTES=60
MAX_UPLOAD_SIZE_MB=50

# AI Assistant (optional)
GEMINI_API_KEY=your-api-key-here
GEMINI_MODEL=gemini-2.5-flash
